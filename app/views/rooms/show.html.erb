<h1><%= @room.user.name %>'s <%= @room.name %> </h1>

<% @room.windows.each_with_index do |window, i | %>
    <%= link_to "Window #{i+1}", window_path(window) %>
    <%= link_to "Delete Window", window, method: :delete, data: { confirm: "Do you want to delete this window?" } %><br>

<% end %><br>



<%= link_to "Create a Window", new_window_path, class: 'button' %><br>
<%= link_to "View all Rooms", user_path(@room.user)%>

